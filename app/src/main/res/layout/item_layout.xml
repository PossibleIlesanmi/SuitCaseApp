<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Add ImageView for the image -->
            <ImageView
                android:id="@+id/imageViewItem"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_image"
                android:scaleType="centerCrop"
                android:layout_marginRight="8dp" /> <!-- Add margin to the right -->

            <!-- Item name -->
            <TextView
                android:id="@+id/textItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Name"
                android:textSize="15sp"
                android:textColor="#000000" />

            <!-- Description -->
            <TextView
                android:id="@+id/textItemDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:visibility="gone"
                android:text="Description"
                android:textSize="10sp"
                android:textColor="#000000" />

            <!-- Location -->
            <TextView
                android:id="@+id/textItemLocation1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Location"
                android:visibility="gone"
                android:textSize="10sp"
                android:textColor="#000000" />

            <!-- Price -->
            <TextView
                android:id="@+id/textItemPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Price"
                android:textSize="15sp"
                android:textColor="#000000" />

            <!-- Checkbox for marking as purchased -->
            <CheckBox
                android:id="@+id/checkboxItemPurchased"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iconThreeDots"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:src="@drawable/menuvertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/textItemName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/iconThreeDots"
                android:layout_centerVertical="true" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            app:dividerColor="@color/black"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
